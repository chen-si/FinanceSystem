<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heu.finance.mapper.admin.AdminMapper">
    <update id="updateAdminStatus">
        update admin set status = #{status}
        where id = #{id}
    </update>

    <select id="selectUserByUserName" resultType="com.heu.finance.pojo.admin.Admin">
        select id, username, password, status from admin where username = #{username}
    </select>
</mapper>